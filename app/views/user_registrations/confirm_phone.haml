= t("view.user_registrations.phone_confirm")
= form_tag user_confirm_phone_path, :method => :get do 
  = hidden_field_tag :email, params[:email]
  %p
    %label
      = t("labels.phone_confirm")
    = text_field_tag :phone_confirm
  %p
    = submit_tag t("submits.confirm")
  %p
    = link_to t("links.resend_mobile_code"), user_resend_code_path(:email => params[:email])
