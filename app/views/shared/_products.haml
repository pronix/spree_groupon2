= render 'shared/main_tabs'
- paginated_products = @searcher.products if params.key?(:keywords)
- paginated_products ||= products

- if products.empty?
  = t(:no_products_found)
- elsif params.key?(:keywords)
  %h3= t(:search_results, :keywords => h(params[:keywords]))
 
- if products.any?
  - products.each do |product|
    - if Spree::Config[:show_zero_stock_products] || product.has_stock?
      = hook :products_list_item, {:product => product} do
        = link_to small_image(product), product
        = link_to raw(product.name + " <span class='price selling'>#{product_price(product)}</span>"), product, :class => 'info'

 
%hr.space

- if paginated_products.respond_to?(:total_pages)
  - params.delete(:search)
  - params.delete(:taxon)
  = will_paginate(paginated_products, :previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;")

%hr.space





